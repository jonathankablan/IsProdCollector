{# templates/data_collector/template.html.twig #}
{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    <style>
        .sf-toolbar-prod {background-color: #f00;color: #fff;padding: 5px;}
        .sf-toolbar-dev {background-color: #2a8f31;color: #fff;padding: 5px;}
        .blinking{animation:blinkingText 1.3s infinite;}
        @keyframes blinkingText{0%{color: #fff;} 50%{color: transparent;} 100%{color: #fff;}}
    </style>

    {% set icon %}
        <span class="sf-toolbar-block sf-toolbar-block-twig sf-toolbar-status-normal">
            {% if collector.isProd %}
                <span class="sf-toolbar-prod">
                    <svg class="blinking" xmlns="http://www.w3.org/2000/svg" data-icon-name="icon-tabler-database" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <ellipse cx="12" cy="6" rx="8" ry="3"></ellipse>
                        <path d="M4 6v6a8 3 0 0 0 16 0v-6"></path>
                        <path d="M4 12v6a8 3 0 0 0 16 0v-6"></path>
                    </svg>
                    DB Prod
                </span>
            {% else %}
                <span class="sf-toolbar-dev">
                    <svg class="blinking" xmlns="http://www.w3.org/2000/svg" data-icon-name="icon-tabler-database" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <ellipse cx="12" cy="6" rx="8" ry="3"></ellipse>
                        <path d="M4 6v6a8 3 0 0 0 16 0v-6"></path>
                        <path d="M4 12v6a8 3 0 0 0 16 0v-6"></path>
                    </svg>
                    DB Dev
                </span>
            {% endif %}
        </span>
    {% endset %}

    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>URL :</b>
            <code>{{ collector.getDatabaseUrl }}</code>
        </div>
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: false }) }}
{% endblock %}
